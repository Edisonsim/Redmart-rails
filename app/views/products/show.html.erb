<div class="container">

  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @product.name %></h1>

        <ul>
          <%= @product.reviews.find_each  do |review| %>
            <%=review.content%>
            <p class="container">
              Posted by: <%=review.user.name %>
            </p>


          <li><%= review.content %></li>

          <% end %>
        </ul>
    </section>
  </aside>
</div>
