<% provide(:title, "Home") %>
  <head>
    <title>Welcome to TravelMart</title>
  </head>
  <body>
    <% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="review_form">
        <%= render 'shared/review_form' %>
      </section>
    </aside>
    <div class="col-md-8">
     <h3>Review Feed</h3>
     <%= render 'shared/feed' %>
   </div>
  </div>
<% else %>
    <div class="center jumbotron">
    <h1>Welcome to TravelMart</h1>
    <p>Home page of TravelMart</p>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>
  </body>
  <% end %>
